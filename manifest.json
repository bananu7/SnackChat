{
  "manifest_version": 2,

  "name": "SnackChat",
  "description": "This extension augments StackOverflow chat.",
  "version": "1.0",

  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "http://chat.stackoverflow.com/"
  ],

  "content_scripts": [
    {
      "matches": ["http://chat.stackoverflow.com/*"],
      "css": ["monokai_sublime.css", "snackchat.css"],
      "js": ["snackchat-content.js"]
    }
  ],

  "web_accessible_resources": [
    "script.js",
    "monokai_sublime.css",
    "lib/highlight.min.js"
  ],

  "background": {
    "scripts": ["snackchat-background.js"],
    "persistent": true
  }
}